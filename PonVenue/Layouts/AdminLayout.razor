@using PonVenue.Components.Layout
@inherits LayoutComponentBase

@attribute [Authorize]

@if (layoutType == "fixed-header")
{
    <Layout Sider>
        <LayoutSider>
            <LayoutSiderContent>
                <AdminSideMenu />
            </LayoutSiderContent>
        </LayoutSider>
        <Layout>
            <LayoutHeader Fixed>
                <AdminTopMenu ThemeEnabledChanged="@OnThemeEnabledChanged"
                     ThemeGradientChanged="@OnThemeGradientChanged"
                     ThemeRoundedChanged="@OnThemeRoundedChanged"
                     ThemeColorChanged="@OnThemeColorChanged"
                     @bind-LayoutType="@layoutType" />
            </LayoutHeader>
            <LayoutContent Padding="Padding.Is4.OnX.Is4.FromTop">
                @Body
            </LayoutContent>
        </Layout>
    </Layout>
}
else if (layoutType == "fixed-header-footer-only")
{
    <Layout>
        <LayoutHeader Fixed>
            <AdminTopMenu ThemeEnabledChanged="@OnThemeEnabledChanged"
                 ThemeGradientChanged="@OnThemeGradientChanged"
                 ThemeRoundedChanged="@OnThemeRoundedChanged"
                 ThemeColorChanged="@OnThemeColorChanged"
                 @bind-LayoutType="@layoutType" />
        </LayoutHeader>
        <LayoutContent Padding="Padding.Is4.OnX.Is4.FromTop">
            @Body
        </LayoutContent>
        <LayoutFooter Fixed>
            <FooterMenu></FooterMenu>
        </LayoutFooter>
    </Layout>
}
else if (layoutType == "sider-with-header-on-top")
{
    <Layout>
        <LayoutHeader Fixed>
            <AdminTopMenu ThemeEnabledChanged="@OnThemeEnabledChanged"
                 ThemeGradientChanged="@OnThemeGradientChanged"
                 ThemeRoundedChanged="@OnThemeRoundedChanged"
                 ThemeColorChanged="@OnThemeColorChanged"
                 @bind-LayoutType="@layoutType" />
        </LayoutHeader>
        <Layout Sider>
            <LayoutSider>
                <LayoutSiderContent>
                    <AdminSideMenu />
                </LayoutSiderContent>
            </LayoutSider>
            <Layout>
                <LayoutContent Padding="Padding.Is4.OnX.Is4.FromTop">
                    @Body
                </LayoutContent>
            </Layout>
        </Layout>
    </Layout>
}
