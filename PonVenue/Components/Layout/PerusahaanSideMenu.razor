     Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="customIcon" />
                PON
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="/perusahaan">
                    <BarIcon IconName="IconName.Home" />
                    Home
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/perusahaan/profile">
                    <BarIcon IconName="IconName.User" />
                    Profile
                </BarLink>
            </BarItem>
              <BarItem>
                <BarLink To="/perusahaan/permohonan">
                    <BarIcon IconName="IconName.DotCircle" />
                    Permohonan
                </BarLink>
            </BarItem>
       
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarLink To="/">
                    <BarIcon IconName="IconName.Clock" />
                    Logout
                </BarLink>
            </BarItem>
        </BarEnd>
    </BarMenu>
