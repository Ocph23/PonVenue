<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PonVenueMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PonVenueMobile.Pages"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent Title="Home"
                     Icon="home.svge"
                     ContentTemplate="{DataTemplate local:HomePage}" />
        <ShellContent Title="List Venue"
                     Icon="list.svg"
                     ContentTemplate="{DataTemplate local:ListVenuePage}" />
        <ShellContent Title="Jadwal"
                     Icon="calender.svg"
                     ContentTemplate="{DataTemplate local:JadwalPage}" />
        <ShellContent Title="Venue"
                     Icon="map.svg"
                     ContentTemplate="{DataTemplate local:VenuePage}" />
        
    </TabBar>

</Shell>
